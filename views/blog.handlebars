<div class="text">
  <h2>{{blog_title}}</h2>

  <p>{{description}}</p>
  <p>Created by {{user.username}} on {{format_date date_created}}</p>
  
  {{!-- <p>
    <button class="btn btn-primary">Fund this Project!</button>
  </p> --}}
</div>

<div>
{{#if logged_in}}
<form class="comment-form" data-blog_id={{blog.id}}>
  <div>
    <textarea class="ml-5" name="comment-body" id='comment-body'></textarea>
  </div>

  <div>
    <button class="button is-warning ml-5 mb-5" type="submit">Add Comment</button>
  </div>

</form>
{{/if}}

</div>
 {{#each comments as |comment|}}
 <div style="border-style: dashed;">
 <p>{{comment.comment_description}}</p>
 </div>
 {{/each}}

<script src="/js/comment.js"></script>
